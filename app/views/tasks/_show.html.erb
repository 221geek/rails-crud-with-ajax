<div class="modal-body">
    <p id="notice"><%= notice %></p>

    <h5>
        <em class="fa fa-tasks"></em> <%= @task.title %>
    </h5>

    <div class="my-4 d-flex">
        <h5 class="me-3"><em class="fa fa-align-left"></em></h5>
        <%= @task.description %>
    </div>

    <p>
        <strong>Status:</strong>
        <%= @task.status %>
    </p>
</div>
<div class="modal-footer">
    <%= link_to 'Destroy', @task, method: :delete, data: { confirm: 'Are you sure?', bs_dismiss: 'modal', remote: true }, class: 'close-modal btn btn-danger' %>
    <%= link_to 'Edit', edit_task_path(@task), data: {bs_toggle: 'modal', bs_target: '#editTaskModal', remote: true}, class: 'btn btn-success' %>
</div>